{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./build", // Asegúrate de que esta línea esté presente
    "rootDir": "./src", // Asegúrate de que esta línea esté presente
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
